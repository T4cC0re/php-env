FROM php:5.6-apache
MAINTAINER Hendrik 'Xendo' Meyer <mail@xendo.net>

RUN apt-get update &&\
  apt-get install -y libmcrypt-dev zlib1g-dev &&\
  docker-php-ext-install sockets mcrypt mbstring zip &&\
  echo 'date.timezone = "UTC"' >> /usr/local/etc/php/php.ini &&\
  mkdir -p /srv/www/ &&\
  sed -i 's;DocumentRoot /var/www/html;DocumentRoot /srv/www/www;gm' /etc/apache2/apache2.conf
