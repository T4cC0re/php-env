FROM %IMAGE%
MAINTAINER Hendrik 'T4cC0re' Meyer <mail@t4cc0.re>%APACHE1%

# deleted after build:
ARG buildDeps=""

# kept after build:
ARG packages="git libmcrypt-dev zlib1g-dev libsasl2-dev libgeoip-dev libmemcached-dev sudo subversion libmysqlclient-dev"

# PHP extensions to build and register:
ARG extensions="sockets mcrypt mbstring zip pdo pdo_mysql"

# geoip
ARG GEOIP_VERSION="1.1.1"

# Xdebug
# PHP5.X
ARG XDEBUG_VERSION_5="2.4.1"
ARG XDEBUG_VERSION_LEGACY="2.2.7"
# PHP7
ARG XDEBUG_VERSION_7="2.5.1"

# Memcached
# PHP5.X
ARG MEMCACHED_PECL_VERSION_5="2.2.0"
# PHP7
ARG MEMCACHED_PECL_VERSION_7="3.0.3"

RUN set -x\
  && apt-get update\
  && apt-get install -y $buildDeps $packages\
  && (\
    php -r 'if(version_compare(PHP_VERSION, 7,">=")){exit (1);}'\
    && (\
	php -r 'if(version_compare(PHP_VERSION, "5.4.0","<")){exit (1);}'\
       	&& pecl install -f memcached-${MEMCACHED_PECL_VERSION_5}\
        || apt-get install -y php5-memcached\
       )\
    || pecl install -f memcached-${MEMCACHED_PECL_VERSION_7}\
    )\
  && (\
    php -r 'if(version_compare(PHP_VERSION, 7,">=")){exit (1);}'\
    && (\
	php -r 'if(version_compare(PHP_VERSION, "5.4.0","<")){exit (1);}'\
       	&& pecl install -f Xdebug-${XDEBUG_VERSION_5}\
        || pecl install -f Xdebug-${XDEBUG_VERSION_LEGACY}\
       )\
    || pecl install -f Xdebug-${XDEBUG_VERSION_7}\
    )\
  && pecl install -f geoip-${GEOIP_VERSION}\
  && docker-php-ext-install $extensions\
  && php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"\
    && php composer-setup.php -- --install-dir=/bin --filename composer\
    && rm -rf composer-setup.php\
  && echo 'date.timezone = "UTC"' >> /usr/local/etc/php/php.ini\%APACHE2%
  && apt-get purge -y --auto-remove $buildDeps\
    && rm -rf /var/lib/apt/lists/*
RUN echo "zend_extension=$(find / -name xdebug.so | head -1)" > /usr/local/etc/php/conf.d/ext-xdebug.ini\
  && echo "extension=$(find / -name geoip.so | head -1)" > /usr/local/etc/php/conf.d/ext-geoip.ini\
  && echo "extension=$(find / -name memcached.so | head -1)" > /usr/local/etc/php/conf.d/ext-memcached.ini\%APACHE3%
